# NetBox Proxmox Sync Configuration
# Syncs Proxmox VMs and Containers to NetBox with optional port scanning

[proxmox]
# Proxmox API credentials
pve_host = pve.example.com
pve_user = sync@pam
pve_password = your_password
pve_verify_ssl = False

# NetBox site name for Proxmox cluster
netbox_site = Datacenter

[netbox]
# NetBox API credentials
url = https://netbox.example.com
token = your_api_token_here
ssl_verify = True

[sync]
# Synchronization options
enabled = True
# Interval in seconds (3600 = 1 hour)
interval = 3600
# Dry run mode (log changes without applying them)
dry_run = False

[port_scanning]
# Port scanning feature - auto-detect open ports and add as services
enabled = False
# Ports to scan (comma-separated, ranges with dash, e.g. "22,80,443,3000-3100,8080-8090")
ports_to_scan = 22,80,443,3306,5432,8080,8443
# Socket timeout per port in seconds
timeout = 5
# Max parallel threads for scanning
max_threads = 20

[logging]
# Log level: DEBUG, INFO, WARNING, ERROR
level = INFO
# Log file path (leave empty for console only)
file = netbox-sync.log
# Max log file size in MB
max_size = 10
# Number of backup log files
backup_count = 5
